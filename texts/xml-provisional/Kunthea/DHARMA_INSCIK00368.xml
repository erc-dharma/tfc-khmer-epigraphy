        <body>
                <div type="edition" xml:lang="san-Latn">
<lg n="1" met="anuṣṭubh"><milestone type="pagelike" unit="face" n="A"/>
<l n="a"><lb n="A1"/>$ddandaOrnate $circleTarget namo vuddhāya nirmmāṇa_</l>
<l n="b">dharmmasāmbhogamūrttaye</l>
<l n="c"><lb n="A2"/>bhāvābhāvadvayātīto _</l>
<l n="d">dvayātmā yo nirātmakaḥ</l>
</lg>
                   <lg n="2" met="anuṣṭubh">
<l n="a"><lb n="A3"/>$circleTarget bhaiṣajyaguruvaiḍūryya_</l>
<l n="b">prabharājajinan name</l>
<l n="c"><lb n="A4"/>kṣemārogyāṇi janyante _</l>
<l n="d">yena nāmāpi śr̥ṇvatām·</l>
</lg>
                   <lg n="3" met="upajāti">
<l n="a"><lb n="A5"/>$circleTarget śrīsūryyavairocanacandarociḥ</l>
<l n="b">śrīcandravairocanarohiṇīśaḥ</l>
<l n="c"><lb n="A6"/>rujāndhakārāpaharau prajānāṁ _</l>
<l n="d">munīndrameror jayatām uhante</l>
</lg>
                   <lg n="4" met="upajāti">
<l n="a"><lb n="A7"/>$circleTarget Āsīn nr̥paś śrīdharaṇīndravarmma_</l>
<l n="b">devātmajaś śrījayavarmmadevaḥ</l>
<l n="c"><lb n="A8"/>jāto jayādityapureśvarāyāṁ</l>
<l n="d">vedāmvaraikendubhir āptarājyaḥ</l>
</lg>
                   <lg n="5" met="upajāti">
<l n="a"><lb n="A9"/>$circleTarget niśśeṣarājanyaśirovataṁsa_</l>
<l n="b">pādāmvujas saṁyati saṁhr̥tāriḥ</l>
<l n="c"><lb n="A10"/>paryyagrahīt sadguṇaratnabhūmāṁ_</l>
<l n="d">yatkīrttihārāṁ vasudhāṅganāṁ yaḥ</l>
</lg>
                   <lg n="6" met="upajāti">
<l n="a"><lb n="A11"/>$circleTarget sadāmudā varddhitadānavāri_s</l>
<l n="b">sadānavarddhipriyasaṁpadāḍhyaḥ</l>
<l n="c"><lb n="A12"/>Iṣṭyāhavaiḥ kliṣṭasurārikānto _</l>
<l n="d">yaḥ kr̥ṣṇakalpo py avadātavarṇaḥ</l>
</lg>
                   <lg n="7" met="upajāti">
<l n="a"><lb n="A13"/>$circleTarget yo 'bhyarthitāṁ bhūpatibhir durāpāṁ _</l>
<l n="b">lakṣmīm upekṣya svayam abhyupetām·</l>
<l n="c"><lb n="A14"/>dikṣu drutāṁ hlādayati sma kīrtti_m</l>
<l n="d">aho vicitrā rucir indriyāṇām·</l>
</lg>
                   <lg n="8" met="upajāti">
<l n="a"><lb n="A15"/>$circleTarget yaṁ vīkṣya dhāmnā vijite 'pi nāthe</l>
<l n="b">vuddhveva kāntyā vijitañ ca kāmam·</l>
<l n="c"><lb n="A16"/>śucan tyajantyo nijanāma sārthaṁ _</l>
<l n="d">vandhīkr̥tāripramadāḥ pracakruḥ</l>
</lg>
                   <lg n="9" met="upajāti">
<l n="a"><lb n="A17"/>$circleTarget puṇyāyuṣaḥ kṣīṇatayā yuge 'ntye</l>
<l n="b">kṣayaṅ gatāyāṁ kṣayavat prajāyām·</l>
<l n="c"><lb n="A18"/>prajāpatiḥ prāgyugavad vitene _</l>
<l n="d">yo 'bhyutthitiṁ pūrṇavr̥ṣāṁ samr̥ddhām·</l>
</lg>
                   <lg n="10" met="anuṣṭubh">
<l n="a"><lb n="A19"/>$circleTarget r̥ddhyā svarggikr̥tāṁ pr̥thvīṁ _</l>
<l n="b">matvā maraṇadūṣitām·</l>
<l n="c"><lb n="A20"/>martyānām amaratvāya _</l>
<l n="d">yo 'diśad bheṣajāmr̥tam·</l>
</lg>
                   <lg n="11" met="anuṣṭubh">
<l n="a"><lb n="A21"/>$circleTarget puṣyaṅ kr̥tī kr̥tīkr̥tya _</l>
<l n="b">pūrṇāṅgaṁ yo 'karod vr̥ṣam·</l>
<l n="c"><lb n="A22"/>rājavaidyācikitsyāṅghri_</l>
<l n="d">bhaṅgan triyugadoṣataḥ</l>
</lg>
                   <lg n="12" met="anuṣṭubh">
<l n="a"><lb n="A23"/>$circleTarget jitvānyagopativr̥ṣaṁ _</l>
<l n="b">svairan tribhuvanāṅgane</l>
<l n="c"><lb n="A24"/>jr̥mbhate ninadan dhīraṁ _</l>
<l n="d">vr̥ṣo yatpuṣkalīkr̥taḥ</l>
</lg>
                   <lg n="13" met="anuṣṭubh"><milestone type="pagelike" unit="face" n="B"/>
<l n="a"><lb n="B1"/>$circleTarget dehinān deharogo ya_</l>
<l n="b">[n na svaro]go rujattarām·</l>
<l n="c"><lb n="B2"/>rāṣṭraduḥkhaṁ hi bhart(r̥̄)ṇā_n</l>
<l n="d">duḥkhan duḥkhan tu nātmanaḥ</l>
</lg>
   <lg n="14" met="anuṣṭubh">
<l n="a"><lb n="B3"/>$circleTarget Āyurvedāstravedeṣu _</l>
<l n="b">vaidyavīrair vviśāradaiḥ</l>
<l n="c"><lb n="B4"/>yo ghātayad rāṣṭrarujo _</l>
<l n="d">rujārīn bheṣajāyudhaiḥ</l>
</lg>  
                   <lg n="15" met="anuṣṭubh">
<l n="a"><lb n="B5"/>$circleTarget sarvveṣām aparādhān ya_s</l>
<l n="b">sarvvataḥ pariśodhayan·</l>
<l n="c"><lb n="B6"/>yugāparādhena rujā_m</l>
<l n="d">aparādhān vyaśodhayat·</l>
</lg>
                   <lg n="16" met="anuṣṭubh">
<l n="a"><lb n="B17"/>$circleTarget sārogyaśālaṁ parito _</l>
<l n="b">bhaiṣajyasugataṁ vyadhāt·</l>
<l n="c"><lb n="B18"/>sārddhañ jinaurasābhyāṁ ya_s</l>
<l n="d">sadāśāntyai prajārujām·</l>
</lg>
                   <lg n="17" met="anuṣṭubh">
<l n="a"><lb n="B9"/>$circleTarget sa vyadhād idam ārogya_</l>
<l n="b">śālaṁ sasugatālayam·</l>
<l n="c"><lb n="B10"/>bhaiṣajyasugatañ ceha _</l>
<l n="d">dehāmvarahr̥dindunā</l>
</lg>
                   <lg n="18" met="anuṣṭubh">
<l n="a"><lb n="B11"/>$circleTarget so 'tiṣṭhipad imau cātra _</l>
<l n="b">rogiṇāṁ rogaghātinau</l>
<l n="c"><lb n="B12"/>śrīmantau sūryyacandrādi_</l>
<l n="d">vairocanajinātmajau</l>
</lg>
                   <lg n="19" met="anuṣṭubh">
<l n="a"><lb n="B13"/>$circleTarget cikitsyā Atra catvāro _</l>
<l n="b">varṇā dvau bhiṣajau tayoḥ</l>
<l n="c"><lb n="B14"/>pumān ekaḥ striyau ca dve _</l>
<l n="d">Ekaśaḥ sthitidāyinaḥ</l>
</lg>
                   <lg n="20" met="anuṣṭubh">
<l n="a"><lb n="B15"/>$circleTarget nidhipālau pumāṅsau dvau _</l>
<l n="b">bheṣajānāṁ vibhājakau</l>
<l n="c"><lb n="B16"/>grāhakau vrīhikāṣṭhānā_n</l>
<l n="d">taddāyibhyaḥ pratiṣṭhitau</l>
</lg>
                   <lg n="21" met="anuṣṭubh">
<l n="a"><lb n="B17"/>$circleTarget pācakau tu pumāṅsau dvau _</l>
<l n="b">pākaidhodakadāyinau</l>
<l n="c"><lb n="B18"/>puṣpadarbhaharau deva_</l>
<l n="d">vasateś ca viśodhakau</l>
</lg>
                   <lg n="22" met="anuṣṭubh">
<l n="a"><lb n="B19"/>$circleTarget dvau yajñahāriṇau pattra_</l>
<l n="b">kārau pattraśalākayoḥ</l>
<l n="c"><lb n="B20"/>dātārāv atha bhaiṣajya_</l>
<l n="d">pākendhanaharāv ubhau</l>
</lg>
                   <lg n="23" met="anuṣṭubh">
<l n="a"><lb n="B21"/>$circleTarget narāś caturdaśārogya_</l>
<l n="b">śālāsaṁrakṣinaḥ punaḥ</l>
<l n="c"><lb n="B22"/>dātāro bheṣajānā= _</l>
<l n="d">====-+s(thi)te</l>
</lg>
                   <lg n="24" met="anuṣṭubh">
<l n="a"><lb n="B23"/>$circleTarget teṣām e(ko) na(r)o += _</l>
<l n="b">====-+-naḥ</l>
<l n="c"><lb n="B24"/>vārisantā[pa]bhaiṣaja_</l>
<l n="d">====-+-=</l>
</lg>
                   <lg n="25" met="anuṣṭubh"><milestone type="pagelike" unit="face" n="C"/>
<l n="a"><lb n="C1"/>dve tu vrīhyavaghātinyau _</l>
<l n="b">tā Aṣṭau pinditāḥ striyaḥ</l>
<l n="c"><lb n="C2"/>tāsān tu sthitidāyinyaḥ _</l>
<l n="d">pratyekaṁ yositāv ubhe</l>
</lg>
                   <lg n="26" met="anuṣṭubh">
<l n="a"><lb n="C3"/>punaḥ piṇḍīkr̥tās te tu _</l>
<l n="b">dvātriṁśat paricārikāḥ</l>
<l n="c"><lb n="C4"/>bhūyo 'ṣṭhānavatis sarvve _</l>
<l n="d">pinditās sthitidais saha</l>
</lg>
                   <lg n="27" met="anuṣṭubh">
<l n="a"><lb n="C5"/>tandulā devapūjāṅśā _</l>
<l n="b">Ekadroṇā dine dine</l>
<l n="c"><lb n="C6"/>śeṣā yajñāḥ pradātavyā _</l>
<l n="d">rogibhyaḥ prativāsaram·</l>
</lg>
                   <lg n="28" met="anuṣṭubh">
<l n="a"><lb n="C7"/>$circleTarget prativarṣan tv idaṁ grāhyaṁ _</l>
<l n="b"> triṣkr̥tvo bhūpater nidheḥ</l>
<l n="c"><lb n="C8"/>pratyekañ caitrapūrṇamyāṁ _</l>
<l n="d">śrāddhe cāpy uttarāyaṇe</l>
</lg>
                   <lg n="29" met="anuṣṭubh">
<l n="a"><lb n="C9"/>$circleTarget raktāntajālavasana_m</l>
<l n="b">ekaṁ dhautāmvarāṇi ṣaṭ·</l>
<l n="c"><lb n="C10"/>dve gobhikṣe pañcapalaṁ _</l>
<l n="d">takkaṁ kr̥ṣṇā ca tāvatī</l>
</lg>
                   <lg n="30" met="anuṣṭubh">
<l n="a"><lb n="C11"/>$circleTarget Ekaḥ pañcapalas siktha_</l>
<l n="b">dīpa Ekapalāḥ punaḥ</l>
<l n="c"><lb n="C12"/>catvāro madhunaḥ prasthā_s</l>
<l n="d">trayaḥ prasthās tilasya ca</l>
</lg>
                   <lg n="31" met="anuṣṭubh">
<l n="a"><lb n="C13"/>$circleTarget ghr̥taṁ prastho 'tha bhaiṣajyaṁ _</l>
<l n="b">pippalīreṇudīpyakam·</l>
<l n="c"><lb n="C14"/>punnāgañ caikaśaḥ pāda_</l>
<l n="d">dvayañ jātīphalatrayam·</l>
</lg>
                   <lg n="32" met="anuṣṭubh">
<l n="a"><lb n="C15"/>$circleTarget hiṅgukṣāraṁ kotthajīrṇa_m</l>
<l n="b">ekaikañ caikapādakam·</l>
<l n="c"><lb n="C16"/>pañcavimvan tu karpūraṁ _</l>
<l n="d">śarkarāyāḥ paladvayam·</l>
</lg>
                   <lg n="33" met="anuṣṭubh">
<l n="a"><lb n="C17"/>$circleTarget daṅdaṅsākhyā jalacarāḥ _</l>
<l n="b">pañcākhyātā Athaikaśaḥ</l>
<l n="c"><lb n="C18"/>śrīvāsañ candanan dhānyaṁ _</l>
<l n="d">śatapuṣpaṁ palaṁ smr̥tam·</l>
</lg>
                   <lg n="34" met="anuṣṭubh">
<l n="a"><lb n="C19"/>$circleTarget Elānāgarakakola[ṁ] _</l>
<l n="b"> marican tu paladvayam·</l>
<l n="c"><lb n="C20"/>pratyekam ekaśaḥ prasthau _</l>
<l n="d">dvau pracīvalasarṣṣapau</l>
</lg>
                   <lg n="35" met="anuṣṭubh">
<l n="a"><lb n="C21"/>$circleTarget tvaksārddhamuṣṭiḥ pathyās t[u] _</l>
<l n="b">catvāriṅśat prakalpitāḥ</l>
<l n="c"><lb n="C22"/>dārvībhidādvayañ cātha _</l>
<l n="d">sārddhaikapalam ekaśaḥ</l>
</lg>
                   <lg n="36" met="anuṣṭubh">
<l n="a"><lb n="C23"/>$circleTarget kandaṅ halāy jansyaṅ deva_</l>
<l n="b">dāru =vyaṁ prakalpitam(·)</l>
<l n="c"><lb n="C24"/>Ekapādaikapalako _</l>
<l n="d">'pi ==vaḥ prakalpitaḥ</l>
</lg>
                   <lg n="37" met="anuṣṭubh"><milestone type="pagelike" unit="face" n="D"/>
<l n="a"><lb n="D1"/>$circleTarget Athaikaśo madhuguddau _</l>
<l n="b">kuduvatrayamānitau</l>
<l n="c"><lb n="D2"/>Ekaḥ prasthas tu sauvīra_</l>
<l n="d">nirasya parikalpitaḥ</l>
</lg>
                   <lg n="38" met="anuṣṭubh">
<l n="a"><lb n="D3"/>$circleTarget dvau yājakau tadgaṇaka_ś</l>
<l n="b">caikas te dharmmadhāriṇaḥ</l>
<l n="c"><lb n="D4"/>trayo niyojyāś śrīrāja_</l>
<l n="d">vihārādhyāpakena ca</l>
</lg>
                   <lg n="39" met="anuṣṭubh">
<l n="a"><lb n="D5"/>$circleTarget varṣe varṣe tv idan teṣu _</l>
<l n="b">pratyekaṁ parikalpitam·</l>
<l n="c"><lb n="D6"/>tisro vr̥hatyo dvādaśa_</l>
<l n="d">yugā daśakarāḥ paṭāḥ</l>
</lg>
                   <lg n="40" met="anuṣṭubh">
<l n="a"><lb n="D7"/>$circleTarget yugmāni nava hastānāṁ _</l>
<l n="b">vāsasān daśa pañca ca</l>
<l n="c"><lb n="D8"/>dvikaṭṭikaṁ punaḥ pātra_</l>
<l n="d">tritayan trāpuṣaṁ smr̥tam·</l>
</lg>
                   <lg n="41" met="anuṣṭubh">
<l n="a"><lb n="D9"/>$circleTarget deyā dvādaśa khāryyaś ca _</l>
<l n="b">tandulānām athaikaśaḥ</l>
<l n="c"><lb n="D10"/> sikthatakke tripalake _</l>
<l n="d">deye kr̥ṣṇā tu ṣaṭpalā</l>
</lg>
                   <lg n="42" met="upajāti">
<l n="a"><lb n="D11"/>$circleTarget varānyavr̥ṇdāgrasaro 'pi rājā _</l>
<l n="b">prajārthacintājanitārthibhāvaḥ</l>
<l n="c"><lb n="D12"/> bhūyo 'py asau yācata Ity ajasraṁ</l>
<l n="d">praditsataḥ kamvujarājasiṁhān(·)</l>
</lg>
                   <lg n="43" met="upajāti">
<l n="a"><lb n="D13"/>$circleTarget kr̥taṁ mayaitat sukr̥taṁ bhavadbhi_s</l>
<l n="b">saṁrakṣaṇīyaṁ bhavadīyam etat(·)</l>
<l n="c"><lb n="D14"/> puṇyasya kartuḥ phalabhāk prakr̥ṣṭaṁ</l>
<l n="d">saṁrakṣitety uktam idaṁ hi vr̥ddhaiḥ</l>
</lg>
                   <lg n="44" met="upajāti">
<l n="a"><lb n="D15"/>$circleTarget yo rājadhānyān nihitaḥ prabhutve</l>
<l n="b">mantrī sa Evātra niyojanīyah</l>
<l n="c"><lb n="D16"/>na preṣitavyā Iha karmmakārāḥ _</l>
