                     <rdg source="bib:Vong2003_04">ṇiṣ<supplied reason="lost">thu</supplied>ra</rdg>
                  </app>
                  <app loc="31">
                     <lem>sarvapiṇda</lem>
                     <rdg source="bib:Vong2003_04">sarvva piṇḍa</rdg>
