                    <rdg source="bib:Pou2001_01">dānato</rdg>
                     <note>Correct with <foreign>dattaṁ</foreign>.</note>
                  </app>
                   <app loc="12">
                     <lem>dhana<unclear>ṁ</unclear></lem>
